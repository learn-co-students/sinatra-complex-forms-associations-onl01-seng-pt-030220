<h1>Create a new Pet</h1>

<form action="/pets" method="POST">
  <label>Pet name:</label>
  <br>

  <input type="text" name="pet[name]" id="pet_name">
<br>
<p>Select an existing Owner or create a new one below.</p>

<h3>Existing Owner</h3>

  <% @owners.each do |owner| %>
  <input type="radio" name="pet[owner_id]" id="<%= owner.id %>" value="<%= owner.id %>"
  ><%=owner.name%></input>
  <% end %><br><br>

  <label>Owner name:</label><br>
  <input type="text" name="owner[name]" id="owner_name"><br><br>
  <input type="submit" value="Create Pet">
</form>
